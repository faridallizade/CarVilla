@using CarVilla.Models;
@model List<Product>


<a class="btn btn-primary" style="margin-left:95%" asp-action="Create" asp-controller="Product">Create</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th scope="col">Image</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <th scope="row">@item.ID</th>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Description</td>
                <td>
                    <div>
                        <img style="width:50px; height:50px; border:solid 2px black;border-radius:45%" src="~/Upload/@item.ImageUrl" />
                    </div>
                </td>
                <td>
                    <a class="btn btn-warning" asp-route-id="@item.ID" asp-action="Update" asp-controller="Product">Update</a>
                    <a class="btn btn-danger" asp-route-id="@item.ID" asp-action="Delete" asp-controller="Product">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>